<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext" xmlns:pro="http://www.liquibase.org/xml/ns/pro" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-4.0.xsd http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.0.xsd">

    <!-- supported databases just add database here if required -->
    <property name="databaseType" value="postgres" dbms="postgresql" />

    <!-- Linter for liquibase https://whiteclarkegroup.github.io/liquibase-linter/docs/rules/foreign-key-name  -->

    <!-- See types here: https://stackoverflow.com/questions/16890723/list-all-liquibase-sql-types -->
    <property name="current-timestamp" value="now()" dbms="postgresql" />
    <property name="currency" value="numeric(20,8)" dbms="postgresql" />
    <property name="blob_type" value="bytea" dbms="postgresql"/>
    <property name="blob_type" value="blob" dbms="oracle"/>

    <!-- changes for each version -->
    <!-- <include file="changelog-1.0.xml" relativeToChangelogFile="true" /> -->

    <changeSet id="create-tenant2-table" author="avh">
        <comment>Add tenant table</comment>
        <createTable tableName="tenant2">
            <column name="id" type="bigint" autoIncrement="true" startWith="100" incrementBy="1">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_tenant"/>
            </column>
            <column name="name" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            <column name="acronym" type="varchar(20)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="btp_subbaccount_id" type="varchar(200)"/>
            <column name="created_at" type="datetime" defaultValueComputed="${current-timestamp}">
                <constraints nullable="false"/>
            </column>
            <column name="created_by" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="datetime"/>
            <column name="updated_by" type="varchar(50)"/>
        </createTable>
        <addUniqueConstraint columnNames="acronym" tableName="tenant2" constraintName="uq_tenant_acronym"/>
        <addUniqueConstraint columnNames="name" tableName="tenant2" constraintName="uq_tenant_name"/>
    </changeSet>

</databaseChangeLog>