<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:pro="http://www.liquibase.org/xml/ns/pro"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-4.0.xsd http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.0.xsd">
    
    <property name="blob_type" value="bytea" dbms="postgresql"/>
    <property name="blob_type" value="blob" dbms="oracle"/>

    <changeSet id="create-tenant-table" author="avh">
        <comment>Add tenant table</comment>
        <createTable tableName="tenant">
            <column name="id" type="bigint" autoIncrement="true" startWith="100" incrementBy="1">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_tenant"/>
            </column>
            <column name="name" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            <column name="acronym" type="varchar(20)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="btp_subbaccount_id" type="varchar(200)"/>
            <column name="created_at" type="datetime" defaultValueComputed="${current-timestamp}">
                <constraints nullable="false"/>
            </column>
            <column name="created_by" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="datetime"/>
            <column name="updated_by" type="varchar(50)"/>
        </createTable>
        <addUniqueConstraint columnNames="acronym" tableName="tenant" constraintName="uq_tenant_acronym"/>
        <addUniqueConstraint columnNames="name" tableName="tenant" constraintName="uq_tenant_name"/>
    </changeSet>
</databaseChangeLog>